@namespace AntDesign
@inherits AntDomComponentBase

<CascadingValue Value="this" IsFixed="@true">
    <ul class="@ClassMapper.Class" style="@Style" @ref="Ref" id="@Id">
        @if (Simple)
        {
            <PaginationSimple
                Disabled="Disabled"
                PageSize="PageSize"
                Total="Total"
                PageIndex="PageIndex"
                PageIndexChange="HandlePageIndexChange"/>
        }
        else
        {
            <PaginationDefault
                Size="@Size"
                Disabled="Disabled"
                ShowSizeChanger="ShowSizeChanger"
                ShowQuickJumper="ShowQuickJumper"
                Total="Total"
                PageIndex="PageIndex"
                PageSize="PageSize"
                PageSizeOptions="PageSizeOptions"
                PageIndexChange="HandlePageIndexChange"
                PageSizeChange="HandlePageSizeChange"/>
        }
    </ul>
</CascadingValue>