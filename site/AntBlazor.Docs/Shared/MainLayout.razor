@using System.Reflection
@inherits LayoutComponentBase

<AntLayout Class="app-layout" HasSider="true">
    <AntLayoutSider class="menu-sidebar"
                    adCollapsible
                    adBreakpoint="md"
                    adCollapsed="isCollapsed"
                    longBodyMode=true
                    onCollapsedChange="(collapsed)=>isCollapsed = collapsed">
        <div class="sidebar-logo">
            <a href="https://github.com/ElderJames/ant-design-blazor" target="_blank">
                <img src="https://raw.githubusercontent.com/ElderJames/ant-design-blazor/master/logo.svg?sanitize=true" alt="logo">
                <h1>Ant Design for Blazor</h1>
            </a>
        </div>
        <AntMenu theme="dark" mode="AntDirectionVHIType.inline" Style="margin-bottom:40px;" inlineCollapsed="isCollapsed">
            <AntSubMenu open title="Dashboard" icon="dashboard">
                <AntMenuItem matchRouter>
                    <AntNavLink href="" Match="NavLinkMatch.All">
                        Home
                    </AntNavLink>
                </AntMenuItem>
                <AntMenuItem matchRouter>
                    <AntNavLink href="counter">
                        Counter
                    </AntNavLink>
                </AntMenuItem>
                <AntMenuItem matchRouter>
                    <AntNavLink href="fetchdata">
                        Fetch data
                    </AntNavLink>
                </AntMenuItem>
            </AntSubMenu>
            <AntSubMenu open title="Form" icon="form">
                <AntMenuItem matchRouter>
                    <AntNavLink href="button">
                        Button
                    </AntNavLink>
                </AntMenuItem>
                <AntMenuItem matchRouter>
                    <AntNavLink href="card">
                        Card
                    </AntNavLink>
                </AntMenuItem>
                <AntMenuItem matchRouter>
                    <AntNavLink href="avatar">
                        Avatar
                    </AntNavLink>
                </AntMenuItem>
                <AntMenuItem matchRouter>
                    <AntNavLink href="tag">
                        Tag
                    </AntNavLink>
                </AntMenuItem>
                <AntMenuItem matchRouter>
                    <AntNavLink href="divider">
                        Divider
                    </AntNavLink>
                </AntMenuItem>
                <AntMenuItem matchRouter>
                    <AntNavLink href="timeline">
                        Timeline
                    </AntNavLink>
                </AntMenuItem>
                <AntMenuItem matchRouter>
                    <AntNavLink href="breadcrumb">
                        Breadcrumb
                    </AntNavLink>
                </AntMenuItem>
                <AntMenuItem matchRouter>
                    <AntNavLink href="typography">
                        Typography
                    </AntNavLink>
                </AntMenuItem>
            </AntSubMenu>
        </AntMenu>
    </AntLayoutSider>
    <AntLayout class="main-content" Style="@(isCollapsed?"margin-left:80px":"margin-left:256px")">
        <AntLayoutHeader>
            <div class="app-header">
                <span class="header-trigger" @onclick="()=>isCollapsed = !isCollapsed">
                    <AntIcon class="trigger" type="@(isCollapsed ? "menu-unfold" : "menu-fold")"></AntIcon>
                </span>
                <span class="header-buttons">
                    <a class="github-stars" href="https://github.com/ElderJames/ant-design-blazor">
                        <img alt="GitHub stars" src="https://img.shields.io/github/stars/ElderJames/ant-design-blazor?style=social">
                    </a>
                </span>
            </div>
        </AntLayoutHeader>
        <AntLayoutContent longContentMode=true>
            <div class="inner-content">
                @Body
            </div>
        </AntLayoutContent>
        <footer>
            @*<div class="footer-wrap"></div>*@
            <div class="bottom-bar">
                Made with <span class="heart">❤</span> by ant-design-blazor team
            </div>
        </footer>
    </AntLayout>
</AntLayout>

@code
{

    bool isCollapsed = false;
}