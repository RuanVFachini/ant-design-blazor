<header id="header" class="clearfix home-header">
    <Row Style="flex-flow: nowrap; height: 64px;">
        <RowCol Xs="24" Sm="24" Md="6" Lg="6" Xl="5" Xxl="4">
            <h1>
                <a id="logo" href="/">
                    <img alt="logo" src="/docs/assets/logo.svg">Ant Design Blazor
                </a>
            </h1>
        </RowCol>
        @if (IsMobile)
        {
            <Dropdown Placement="PlacementType.BottomRight" Trigger="new[] { TriggerType.Click }" OverlayStyle="width: 300px">
                <Overlay>
                    <HeaderMenu IsMobile />
                </Overlay>
                <ChildContent>
                    <Icon Type="unordered-list" Class="nav-phone-icon" />
                </ChildContent>
            </Dropdown>
        }
        @if (!IsMobile)
        {
            <RowCol Class="menu-row" Xs="0" Sm="0" Md="18" Lg="18" Xl="19" Xxl="20">
                <HeaderMenu IsMobile="false" />
            </RowCol>
        }
    </Row>
</header>

@code {
    [Parameter] public bool IsMobile { get; set; }
}
