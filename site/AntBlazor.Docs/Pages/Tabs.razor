@code{
    private static int addedIndex = 3;
    private Func<AntTabPane>
        Create = () =>
        {
            addedIndex++;
            int temp = addedIndex;
            return new AntTabPane()
            {
                Key = temp.ToString(),
                ChildContent = (b) => { b.AddContent(0, $"Content of Tab Pane {temp}"); },
                Tab = (b) => { b.AddContent(0, $"Tab {temp}"); }
            };
        };
}

