<div>
    <AntBlazor.Input Placeholder="large size"  Size="@InputSize.Large" @bind-Value="@txtValue" >
        <Prefix>
            <AntIcon Type="user" />
        </Prefix>
    </AntBlazor.Input>
    <br />
    <br />
    <AntBlazor.Input Placeholder="default size" @bind-Value="@txtValue" >
        <Prefix>
            <AntIcon Type="user" />
        </Prefix>
    </AntBlazor.Input>
    <br />
    <br />
    <AntBlazor.Input Placeholder="small size" Size="@InputSize.Small" @bind-Value="@txtValue" >
        <Prefix>
            <AntIcon Type="user" />
        </Prefix>
    </AntBlazor.Input>
    <br />
    <br />
    <InputPassword @bind-Value="@txtValue" Placeholder="large Password" Size="@InputSize.Large" OnPressEnter="(e)=>Submit(e)" />
</div>
@code{
    private string txtValue { get; set; }

    private void Submit(KeyboardEventArgs args)
    {
        Console.WriteLine($"password: {txtValue}");
    }
}