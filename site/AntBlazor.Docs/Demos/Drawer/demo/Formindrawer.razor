<div>
    <AntButton Icon="plus" Type="primary" @onclick="_=>open()">New account</AntButton>
    <Drawer Closable="true" Width="720" Visible="visible" Title='("Submit from in Drawer")' OnClose="_=>close()">
        <Template style="height:90%">
            <AntRow Gutter="16">
                <AntCol Span="12">
                    <AntText>Name</AntText>
                    <Input Placeholder="Please enter user name"></Input>
                </AntCol>
                <AntCol Span="12">
                    <AntText>Url</AntText>
                    <AntBlazor.Input Placeholder="please enter url">
                        <AddOnBefore>Http://</AddOnBefore>
                        <AddOnAfter>.Com</AddOnAfter>
                    </AntBlazor.Input>
                </AntCol>
            </AntRow>
            <br />
            <AntRow Gutter="16">
                <AntCol Span="12">
                    <AntText>Owner</AntText>
                    <Input Placeholder="Please select a owner"/>
                </AntCol>
                <AntCol Span="12">
                    <AntText>Type</AntText>
                    <Input Placeholder="please enter url"/>
                </AntCol>
            </AntRow>
            <br />

            <AntRow>
                <AntCol Span="24">
                    <AntText>Description</AntText>
                    <TextArea Placeholder="Please enter your description">

                    </TextArea>
                </AntCol>
            </AntRow>
            <br />
            <AntRow>
                <AntCol Span="18">

                </AntCol>
                <AntCol Span="6">
                    <AntButton Type="default">Cancel</AntButton>
                    <AntButton Type="primary">Submit</AntButton>
                </AntCol>
            </AntRow>
        </Template>
    </Drawer>
</div>


@code{
    bool visible = false;

    void open()
    {
        this.visible = true;
    }

    void close()
    {
        this.visible = false;
    }
}