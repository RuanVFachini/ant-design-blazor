<div>
    <RadioGroup @bind-Value="placement">
        <Radio Value="top">top</Radio>
        <Radio Value="right">right</Radio>
        <Radio Value="bottom">bottom</Radio>
        <Radio Value="left">left</Radio>
    </RadioGroup>

    <AntButton Type="primary" @onclick="_ => open()">Open</AntButton>
    <Drawer Closable="true" Visible="@visible" Placement="@placement" Title='("Drawer in different Placement")' OnClose="_ => close()">
        <p>Some contents...</p>
        <p>Some contents...</p>
        <p>Some contents...</p>
    </Drawer>
</div>  

@code{

    string placement = "right";

    bool visible = false;

    void open()
    {
        this.visible = true;
    }

    void close()
    {
        this.visible = false;
    }
}